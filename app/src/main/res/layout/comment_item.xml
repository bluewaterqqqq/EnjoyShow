<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:paddingTop="4dp"
                android:paddingBottom="2dp"
                android:layout_height="match_parent">

    <ImageView android:layout_width="35dp" android:layout_height="35dp" android:scaleType="centerCrop"
               android:id="@+id/comment_head" android:layout_centerVertical="true" android:layout_marginRight="5dp"
               android:layout_marginBottom="6dp"/>

    <TextView android:id="@+id/comment_uName" android:layout_width="wrap_content"
              android:layout_height="wrap_content" style="@style/titleStyle"
              android:layout_toRightOf="@id/comment_head" android:layout_marginTop="5dp"/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/comment_content"
              android:layout_alignLeft="@id/comment_uName" android:layout_below="@id/comment_uName"
              style="@style/contentStyle" android:layout_marginBottom="6dp"
              android:layout_marginTop="5dp"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/comment_date"
              android:layout_alignParentRight="true" android:singleLine="true" android:layout_marginTop="4dp"
              android:layout_marginRight="5dp"
              style="@style/postDateStyle"/>
    <View android:layout_width="match_parent" android:layout_height="1px" android:background="#20000000"
          android:layout_alignParentBottom="true" android:layout_below="@id/comment_head" />
</RelativeLayout>