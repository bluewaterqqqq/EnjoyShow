<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/item_selector"
    android:clickable="true"
    android:gravity="center_vertical"
    android:paddingBottom="4dp"
    android:paddingLeft="7dp"
    android:paddingRight="7dp"
    android:paddingTop="4dp">

    <FrameLayout
        android:id="@+id/notify_headLayout"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginBottom="6dp"
        android:layout_marginRight="8dp">

        <ImageView
            android:id="@+id/notify_headIv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/notify_type"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="right|bottom"
            android:scaleType="fitXY" />
    </FrameLayout>

    <TextView
        android:id="@+id/notify_titleTv"
        style="@style/titleStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/notify_headLayout" />

    <TextView
        android:id="@+id/notify_type_str"
        style="@style/contentStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/notify_titleTv"
        android:layout_toRightOf="@id/notify_titleTv"
        android:layout_marginLeft="5dp"
        />

    <ImageView
        android:id="@+id/notify_cover"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="centerCrop"
        android:layout_alignParentRight="true" />
    <View android:layout_width="match_parent" android:layout_height="1px" android:background="#20000000"
        android:layout_alignParentTop="true" />
</RelativeLayout>