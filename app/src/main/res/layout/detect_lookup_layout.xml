<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:orientation="vertical"
             android:id="@+id/detectContainer"
             android:background="#f7f7f7"
             android:paddingTop="30dp"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <com.zmdx.enjoyshow.ui.swipecard.SwipeFlingAdapterView
            android:id="@+id/swipeCardView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            app:rotation_degrees="16"
            app:max_visible="4"
            app:min_adapter_stack="6"/>

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:gravity="center" android:layout_marginBottom="30dp"
                  android:layout_gravity="bottom">

        <ImageView android:layout_width="60dp" android:layout_height="60dp"
                   android:background="@drawable/dislike_bg" android:id="@+id/dislike"/>
        <ImageView android:layout_width="60dp" android:layout_height="60dp"
                   android:background="@drawable/detect_like_bg" android:id="@+id/like"
                   android:layout_marginLeft="40dp"/>
    </LinearLayout>


</FrameLayout>