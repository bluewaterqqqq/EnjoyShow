<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:background="#ffffff"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <include layout="@layout/toolbar"/>

    <FrameLayout android:layout_width="match_parent" android:layout_height="match_parent">
        <ScrollView
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:fillViewport="true" android:paddingBottom="50dp">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                <FrameLayout
                        android:id="@+id/picSetLayout"
                        android:layout_width="match_parent"
                        android:layout_height="400dp"/>
                <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                                android:padding="4dp"
                                android:layout_marginTop="5dp">
                    <ImageView android:layout_width="35dp" android:layout_height="35dp" android:scaleType="centerCrop"
                               android:id="@+id/headIconView" android:layout_marginLeft="4dp"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:id="@+id/userNameTv" android:maxLength="15" android:ellipsize="end"
                              android:singleLine="true" android:textSize="15dp" android:textColor="#dd000000"
                              android:layout_toRightOf="@id/headIconView"
                              android:layout_marginLeft="6dp"
                              android:gravity="center_vertical"
                              android:layout_alignTop="@id/headIconView" android:layout_alignBottom="@id/headIconView"
                            />
                    <TextView android:id="@+id/postTimeTv" android:layout_width="wrap_content" android:layout_height="15dp"
                              android:textSize="11dp" android:textColor="#50000000" android:singleLine="true"
                              android:gravity="right" android:layout_marginRight="5dp"
                              android:layout_alignTop="@id/headIconView"
                              android:layout_alignParentRight="true"/>
                    <ImageView android:layout_width="13dp" android:layout_height="13dp"
                               android:layout_toLeftOf="@id/postTimeTv" android:layout_marginRight="4dp"
                               android:layout_alignTop="@id/headIconView"
                               android:background="@drawable/date"/>
                    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                              android:id="@+id/userDescTv" android:textColor="#50000000" android:textSize="12dp"
                              android:singleLine="false" android:maxLines="5" android:ellipsize="end"
                              android:layout_below="@id/headIconView"
                              android:layout_marginTop="6dp" android:layout_marginLeft="4dp"/>
                </RelativeLayout>
                <View android:layout_width="match_parent" android:layout_height="1px" android:background="#20000000"/>
                <FrameLayout android:layout_width="match_parent" android:layout_height="50dp">

                    <LinearLayout android:layout_width="250dp" android:layout_height="match_parent"
                                  android:gravity="center_vertical"
                                  android:paddingLeft="5dp"
                                  android:orientation="horizontal" android:id="@+id/praiseLayout">

                    </LinearLayout>
                    <LinearLayout android:layout_width="60dp" android:layout_height="match_parent"
                                  android:layout_gravity="right" android:id="@+id/praiseNumLayout"
                                  android:orientation="vertical"
                                  android:gravity="center">
                        <ImageView android:id="@+id/praiseImage" android:layout_width="30dp"
                                   android:layout_height="30dp"
                                   android:background="@drawable/llike_icon"/>
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                  android:id="@+id/praiseNumTv"
                                  android:textSize="13dp" android:textColor="#50000000"/>
                    </LinearLayout>

                </FrameLayout>

                <android.support.v7.widget.CardView
                        android:layout_width="match_parent" android:layout_height="wrap_content"
                        app:cardCornerRadius="0dp"
                        app:cardElevation="3dp"
                        app:cardBackgroundColor="#ffffff">
                    <TextView android:layout_width="match_parent" android:layout_height="30dp"
                              android:gravity="center_vertical" android:paddingLeft="5dp"
                              android:drawableLeft="@drawable/comment_icon" android:drawablePadding="3dp"
                              android:text="评论"
                              android:textColor="#50000000" android:textSize="13dp"/>
                    <android.support.v7.widget.RecyclerView
                            android:layout_width="match_parent" android:layout_height="300dp"
                            android:layout_marginTop="30dp"
                            android:id="@+id/commentRecyclerView">
                    </android.support.v7.widget.RecyclerView>
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </ScrollView>

        <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_gravity="bottom"
                android:layout_height="50dp">
            <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent"
                            android:paddingLeft="5dp" android:paddingBottom="2dp" android:paddingTop="2dp"
                            android:paddingRight="5dp"
                            android:gravity="center_vertical">
                <Button android:layout_width="65dp" android:layout_height="match_parent" android:text="发送"
                        android:id="@+id/commentBtn" android:layout_alignParentRight="true"/>
                <EditText android:layout_width="match_parent" android:layout_height="match_parent"
                          android:id="@+id/commentEt" android:textColor="#d0000000"
                          android:layout_toLeftOf="@id/commentBtn"
                          android:hint="添加评论..." style="@style/titleStyle"
                          android:imeOptions="actionSend"
                          android:textColorHint="#50000000"/>

            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </FrameLayout>
</LinearLayout>